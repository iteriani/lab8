<script>
$(document).ready(function(){
	var viewModel = {
		user : ko.observable(""), 
		receipts : ko.observableArray([])
	};
	ko.computed(function(){
		var user = this();
		if(user.length == 0){
			viewModel.receipts([]);
		}else{
			$.get("/message/" + user, function(data){
				viewModel.receipts(data);
			});
		}
	},viewModel.user);
	ko.applyBindings(viewModel, document.getElementById("body"));

});
